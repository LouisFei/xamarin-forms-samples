<?xml version="1.0" encoding="utf-8" ?>
<MasterDetailPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FormsGallery.MasterDetailPageDemoXamlPage"
             Title="Master Detail Example">

  <MasterDetailPage.Master Title="Color List">
    <ContentPage Title="Color List">
        <StackLayout>
          <Label Text="Master" FontSize="30" FontAttributes="Bold" HorizontalOptions="Center" />
          <ListView x:Name="listView" />
        </StackLayout>
    </ContentPage>
  </MasterDetailPage.Master>

  <MasterDetailPage.Detail BackgroundColor="Transparent">
    <ContentPage>
          <Label Text="Detail" />
    </ContentPage>
  </MasterDetailPage.Detail>
  
</MasterDetailPage>